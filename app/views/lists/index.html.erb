<h1>Lists</h1>

<% @lists.each do |list| %>
  <div class="list">
    <h3><%= link_to list.title, list_tasks_path(list), :class => "title-link-color" %></h3>
    <h5><%= list.description %></h5>
    
    <%= link_to ("Edit"), edit_list_path(list), :class => "btn btn-warning" %>
    <%= link_to ("Delete"), list_path(list), method: :delete, data: { confirm: "Delete?" }, :class => "btn btn-warning" %>
  </div>
<% end %>
