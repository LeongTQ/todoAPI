<%= form_for(@list, url: list_path(@list), html: { id: "list-update-form" }) do |f| %>
  <h1 class="text-center">
    Edit Lists
  </h1>

  <div class="form-group">
    <h4> <%= f.label :title_field, "Title" %> </h4>
    <%= f.text_field :title, required: true, id: "list_title_field", class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :text_field, "Description" %> </h4>
    <%= f.text_field :description, id: "list_description_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Update List", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
