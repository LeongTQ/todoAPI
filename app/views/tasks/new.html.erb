<%= form_for(@task, url: list_tasks_path(@list), html: { id: "task-create-form" }) do |f| %>

  <h1 class="text-center">
    Create Task
  </h1>

  <div class="form-group">
    <h4> <%= f.label :text_field, "Description" %> </h4>
    <%= f.text_field :description, id: "task_description_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Create Task", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
